-- TAL Distributors #4
SELECT ORDER_NUM
  FROM ORDERS
 WHERE CUSTOMER_NUM = 126
   AND ORDER_DATE = '15-OCT-2015';

-- TAL Distributors #8
SELECT ITEM_NUM, DESCRIPTION, ON_HAND * PRICE AS ON_HAND_VALUE
  FROM ITEM

-- TAL Distributors #10
SELECT ITEM_NUM, DESCRIPTION
  FROM ITEM
 WHERE CATEGORY IN ('GME','PZL');

-- TAL Distributors #14
SELECT COUNT(1)
  FROM CUSTOMER
 WHERE BALANCE > CREDIT_LIMIT;

-- TAL DistributorsL #22
SELECT ITEM_NUM, DESCRIPTION
  FROM ITEM
 WHERE CATEGORY IN ('PZL','TOY')
   AND LOWER(DESCRIPTION) LIKE '%set%';

-- Colonial Tours #4
SELECT TRIP_NAME
  FROM TRIP
 WHERE TYPE = 'Hiking'
   AND DISTANCE >= 10;

-- Colonial Tours #8
SELECT STATE, COUNT(1)
  FROM TRIP
 GROUP BY STATE;

-- Colonial Tours #14
SELECT TYPE, TRUNC(AVG(DISTANCE),1), TRUNC(AVG(MAX_GRP_SIZE),1)
  FROM TRIP
 GROUP BY TYPE;

-- Colonial Tours #18
SELECT TRIP_ID, SUM(TRIP_PRICE)
  FROM RESERVATION
 GROUP BY TRIP_ID
HAVING COUNT(1) > 1;

-- Colonial Tours #20
SELECT RESERVATION_ID, TRIP_ID
  FROM RESERVATION
 WHERE TO_CHAR(TRIP_DATE,'MON-YYYY') = 'JUN-2016';
